# 配置示例
# 复制此文件为 .env 并填写实际值

# 服务器端口
PORT=3000

# 数据库路径（相对或绝对路径）
DB_PATH=./database/finance.db

# JWT 密钥（用于生成 token）
JWT_SECRET=your_super_secret_jwt_key_change_this

# 密码加密轮次
BCRYPT_ROUNDS=10

# 日志等级
LOG_LEVEL=info

# CORS 允许来源（逗号分隔）
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# 是否启用数据库调试
DB_DEBUG=false